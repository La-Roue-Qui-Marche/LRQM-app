default_platform(:ios)

platform :ios do
  desc "Build, sign, and upload to App Store"
  lane :build_and_upload do
    # Clean the project
    sh("flutter clean")

    # Build the app using Flutter
    sh("flutter build ios --release --no-codesign")

    # Archive the app
    build_app(
      workspace: "ios/Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      export_options: {
        method: "app-store",
        provisioningProfiles: {
          "ch.larouequimarche.app" => "ch.larouequimarche.app"
        }
      }
    )

    # Upload to App Store
    upload_to_app_store(
      skip_metadata: true,
      skip_screenshots: true,
      force: true
    )
  end
end
